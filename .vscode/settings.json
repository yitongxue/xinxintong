{
  "editor.detectIndentation": false,
  "editor.formatOnSave": true,
  "less.compile": {
    "compress": true,
    "sourceMap": false
  },
  "prettier.tabWidth": 2,
  "prettier.useTabs": false,
  "prettier.semi": false,
  "prettier.singleQuote": true,
  "beautify.language": {
    "css": ["css", "less", "scss"],
    "html": ["htm", "html"]
  },
  "beautify.config": {
    "wrap_line_length": 0,
    "indent_size": 2
  },
  "vetur.format.defaultFormatterOptions": {
    "prettier": {
      "semi": false,
      "singleQuote": true
    }
  },
  "vetur.format.options.tabSize": 2,
  "vetur.format.options.useTabs": false
}
